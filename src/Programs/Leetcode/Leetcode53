class Solution {
    public int maxSubArray(int[] nums) {
        int maximum = nums[0];
        int currMax = nums[0];

        // [-2,1,-3,4,-1,2,1,-5,4]
        for(int i=1; i<nums.length; i++){
            currMax = Math.max(nums[i], currMax + nums[i]);
            maximum = Math.max(currMax, maximum);
        }

        return maximum;
    }
}